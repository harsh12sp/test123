{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "appName": {
            "type": "string",
            "defaultValue": "dev-loyaltyv1-func-eastus"
        },
        "appServicePlanName": {
            "type": "string"
        },
        "storageAccountName": {
            "type": "string",
            "defaultValue": ""
        },
        "appInsightsName": {
            "type": "string"
        },
        "keyVaultBaseUri": {
            "type": "string"
        },
        "vnetName": {
            "type": "string"
        },
        "functionsSubnetName": {
            "type": "string"
        },
        "biwJwtAuthenticationSecret": {
            "type": "securestring",
            "defaultValue":"BIWJWTAuthenticationSecretKey"
        },
        "biwJwtIssuer" :{
            "type":"string",
            "defaultValue":"contractorrewards"
        },
        "biwJwtAuthenticationSecretExpiryMS":{
            "type":"string",
            "defaultValue": 900000
        },
        "biwParticipantEndpoint": {
            "type": "string"
        },       
        "cosmosDbConnection": {
            "type": "securestring"
        },
        "mutualTlsCertificateName":{
            "type":"string",
            "defaultValue":"webapiuser"
        },
        "hanaUpdateLoyaltyBaseUrl":{
            "type": "string"
        },
        "hanaUpdateLoyaltyEndPoint":{
            "type":"string",
            "defaultValue":"webapi/retailers/pos/loyalty_registration"
        },
        "netFrameworkVersion": {
            "type": "string",
            "defaultValue": "v6.0"
        }
    },
    "variables": {
        "location": "[parameters('location')]",
        "functionAppName": "[parameters('appName')]",
        "hostingPlanName": "[parameters('appServicePlanName')]",
        "storageAccountName": "[parameters('storageAccountName')]",
        "appInsightsName": "[parameters('appInsightsName')]",
        "keyVaultBaseUri": "[parameters('keyVaultBaseUri')]",
        "functionsSubnetName": "[parameters('functionsSubnetName')]",
        "vnetName": "[parameters('vnetName')]",
        "subnetResourceId": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('functionsSubnetName'))]",
        "biwParticipantEndpoint": "[parameters('biwParticipantEndpoint')]",
        "mutualTlsCertificateName": "[parameters('mutualTlsCertificateName')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-02-01",
            "name": "pid-c53a45f7-b214-5f20-9918-4c49a890712c",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": []
                }
            }
          },
        {
            "apiVersion": "2014-04-01",
            "name": "[variables('appInsightsName')]",
            "type": "Microsoft.Insights/components",
            "location": "[resourceGroup().location]",
            "properties": {
                "applicationId": "[variables('appInsightsName')]"
            }
        },
        {
            "apiVersion": "2016-03-01",
            "type": "Microsoft.Web/sites",
            "name": "[variables('functionAppName')]",
            "identity": {
                "type": "SystemAssigned"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Insights/components', variables('appInsightsName'))]"
            ],
            "location": "[resourceGroup().location]",
            "kind": "functionapp",
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
                "siteConfig": {
                    "netFrameworkVersion": "[parameters('netFrameworkVersion')]",
                    "appSettings": [
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference(concat('microsoft.insights/components/', variables('appInsightsName'))).InstrumentationKey]"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "BIW.JWT_AuthenticationSecret",
                            "value": "[parameters('biwJwtAuthenticationSecret')]"
                        },
                        {
                            "name": "BIW.JWT_Issuer",
                            "value": "[parameters('biwJwtIssuer')]"
                        },
                        {
                            "name": "BIW.JWT_AuthenticationSecretExpiryMS",
                            "value": "[parameters('biwJwtAuthenticationSecretExpiryMS')]"
                        },
                        {
                            "name": "BIW.EnrollParticipantEndpoint",
                            "value": "[variables('biwParticipantEndpoint')]"
                        },
                        {
                            "name": "CosmosDbConnection",
                            "value": "[parameters('cosmosDbConnection')]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~4"
                        },
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "dotnet"
                        },
                        {
                            "name": "Hana.UpdateLoyaltyBaseUrl",
                            "value": "[parameters('hanaUpdateLoyaltyBaseUrl')]"
                        },
                        {
                            "name": "Hana.UpdateLoyaltyEndPoint",
                            "value": "[parameters('hanaUpdateLoyaltyEndPoint')]"
                        },
                        {
                            "name": "Storage.MaxDequeueCount",
                            "value": "5"
                        },
                        {
                            "name": "KeyVault.BaseUri",
                            "value": "[variables('keyVaultBaseUri')]"
                        },
                        {
                            "name": "KeyVault.CertificateName",
                            "value": "[variables('mutualTlsCertificateName')]"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "[toLower(variables('functionAppName'))]"
                        },
                        {
                            "name": "WEBSITE_LOAD_USER_PROFILE",
                            "value": "1"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "10.14.1"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "type": "config",
                    "apiVersion": "2018-02-01",
                    "name": "virtualNetwork",
                    "location": "[variables('location')]",
                    "dependsOn": [
                        "[concat('Microsoft.Web/sites/', variables('functionAppName'))]"
                    ],
                    "properties": {
                        "subnetResourceId": "[variables('subnetResourceId')]",
                        "swiftSupported": true
                    }
                }
            ]
        }
    ]
}